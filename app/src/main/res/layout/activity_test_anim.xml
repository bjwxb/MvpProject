<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wxb.mvp.ui.activity.home.TestAnimActivity">

    <include layout="@layout/custom_toolbar" />

    <TextView
        android:id="@+id/tv_anim_translation"
        style="@style/TxtMainStyle"
        android:text="anim平移"/>

    <TextView
        android:id="@+id/tv_anim_alpha"
        style="@style/TxtMainStyle"
        android:text="anim透明度"/>

    <TextView
        android:id="@+id/tv_anim_rotation"
        style="@style/TxtMainStyle"
        android:text="anim旋转"/>

    <TextView
        android:id="@+id/tv_anim_scale"
        style="@style/TxtMainStyle"
        android:layout_gravity="center_horizontal"
        android:text="anim缩放"/>


    <TextView
        android:id="@+id/tv_custom_interpolator"
        style="@style/TxtMainStyle"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:text="自定义插值器"/>

    <!--<com.wxb.mvp.ui.activity.home.view.PointView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_margin="@dimen/dp_20"/>-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f2"
        android:gravity="center">
        <ImageView
            android:id="@+id/iv_test"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/ic_launcher"/>
    </RelativeLayout>

</LinearLayout>
